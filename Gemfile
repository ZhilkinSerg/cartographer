source 'https://rubygems.org'
ruby '2.2.1'

# web app
gem 'haml'
gem 'sinatra', require: 'sinatra/base'
gem 'thin'

# workers
gem 'oj', require: false

# database
gem 'dm-core'
gem 'dm-validations'
gem 'dm-timestamps'
gem 'dm-types'

# assets
gem 'cssminify', require: false
gem 'uglifier', require: false

# common
gem 'bcrypt'
gem 'beaneater'
gem 'foreman'
gem 'json'
gem 'rake', require: false

# dev stuff
group :development do
  gem 'dotenv'
  gem 'dm-migrations'
  gem 'dm-sqlite-adapter'
  gem 'guard'
  gem 'guard-bundler'
  gem 'guard-foreman'
  gem 'guard-rake'
end
